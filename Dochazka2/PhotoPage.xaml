<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Dochazka2.PhotoPage"
    xmlns:pages="clr-namespace:Dochazka2"
    Title="Photo">

    <StackLayout Orientation="Vertical">
        

        <Image x:Name="PhotoImage" />
        <Button x:Name="CameraButton1"
                Text="Vyfotit"
                Grid.Row="1"
                Clicked="CameraButton1_Clicked"
                BackgroundColor="LightSkyBlue"
                Margin="20"
                VerticalOptions="End"/>

        <Button x:Name="CameraButton2"
                IsVisible="{Binding isPhoto}"
                Text="Odeslat"
                Grid.Row="1"
                Clicked="CameraButton2_Clicked"
                BackgroundColor="LightSkyBlue"
                Margin="20"
                VerticalOptions="End"/>
        
    </StackLayout>
   
</ContentPage>
